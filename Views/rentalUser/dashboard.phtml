<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize the map
    const map = L.map('chargePointsMap').setView([51.505, -0.09], 12);
    
    // Add tile layer (OpenStreetMap)
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);
    
    // Check if geolocation is available
    if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(function(position) {
            // Center map on user's location
            map.setView([position.coords.latitude, position.coords.longitude], 13);
            
            // Add marker for user's location
            L.marker([position.coords.latitude, position.coords.longitude])
                .addTo(map)
                .bindPopup('Your location')
                .openPopup();
            
            // Fetch nearby charge points via AJAX
            fetch(`/api/getNearbyChargePoints.php?lat=${position.coords.latitude}&lng=${position.coords.longitude}&radius=<?= $searchRadius ?>`)
                .then(response => response.json())
                .then(data => {
                    // Add markers for charge points
                    data.forEach(point => {
                        const marker = L.marker([point.latitude, point.longitude])
                            .addTo(map)
                            .bindPopup(
                                `<strong>${point.address}</strong><br>
                                £${point.price_per_kwh}/kWh<br>
                                <a href="/bookChargePoint.php?id=${point.id}" class="btn btn-sm btn-primary mt-2">Book Now</a>`
                            );
                    });
                })
                .catch(error => console.error('Error fetching charge points:', error));
        });
    }
});
</script>

